<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" style="-fx-background-color: GREENYELLOW;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.naoghuman.cm.matrix.MatrixPresenter">
    <children>
        <VBox layoutX="14.0" layoutY="14.0" spacing="7.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
            <children>
                <StackPane alignment="CENTER_LEFT">
                    <children>
                        <ToolBar maxHeight="-Infinity" minHeight="-Infinity" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0">
                            <items>
                                <Button mnemonicParsing="false" onAction="#onActionDeleteMatrix" text="- Matrix" />
                                <Button mnemonicParsing="false" onAction="#onActionCreateCategory" text="+ Category" />
                        <Button mnemonicParsing="false" onAction="#onActionOpenMatrixFolder" text="Open" />
                            </items>
                        </ToolBar>
                        <HBox mouseTransparent="true" spacing="7.0">
                            <children>
                                <Label text="Matrix:">
                                    <font>
                                        <Font size="30.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lMatrix" text="&lt;matrix&gt;">
                                    <font>
                                        <Font size="30.0" />
                                    </font>
                                    <StackPane.margin>
                                        <Insets left="14.0" />
                                    </StackPane.margin>
                                </Label>
                            </children>
                            <StackPane.margin>
                                <Insets left="14.0" />
                            </StackPane.margin>
                        </HBox>
                    </children>
                </StackPane>
                <ScrollPane fitToHeight="true" fitToWidth="true" prefViewportWidth="236.0" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="vbCategories" spacing="7.0" VBox.vgrow="ALWAYS" />
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
